{
  "manifest_version": 3,
  "name": "Font changer",
  "version": "1.0",
  "description": "Change the font of all web pages based on user selection",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}